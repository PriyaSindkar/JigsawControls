<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/STD_MARGIN"
        android:layout_marginLeft="@dimen/STD_MARGIN"
        android:layout_marginRight="@dimen/STD_MARGIN">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtComponent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Component 1"
                android:textColor="@color/primaryColor" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/STD_MARGIN">

                <EditText
                    android:id="@+id/edtComponent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Equipment Serial No"
                    android:textColor="@color/primaryColor"
                    android:inputType="text"
                    android:textColorHint="#d1d1d1"/>
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/STD_MARGIN"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCaptureImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/STD_MARGIN"
                    android:textColor="@color/primaryColor"
                    android:text="Capture Image"/>


                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/LOGO_SIZE"
                        android:layout_height="@dimen/LOGO_SIZE"
                        android:background="@drawable/standard_button_border">

                    <ImageView
                        android:id="@+id/imgComponent1"
                        android:layout_width="@dimen/LOGO_SIZE"
                        android:layout_height="@dimen/LOGO_SIZE"
                        android:scaleType="fitXY"/>

                        <ImageView
                            android:id="@+id/imgRemove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:padding="@dimen/STD_PADDING"
                            android:src="@drawable/ic_navigation_cancel"/>

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/imgCapture1"
                        android:layout_margin="@dimen/STD_MARGIN"
                        android:layout_width="@dimen/LOGO_SIZE"
                        android:layout_height="@dimen/LOGO_SIZE"
                        android:src="@drawable/ic_add"
                        android:padding="@dimen/VS_TEXT_SIZE"
                        android:textColor="@color/white"
                        android:background="@drawable/standard_button_border"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>