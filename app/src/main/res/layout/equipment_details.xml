<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    style="@style/Widget.CardContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgEquipment"
            android:layout_width="@dimen/LOGO_SIZE"
            android:layout_height="@dimen/LOGO_SIZE"
            android:padding="@dimen/STD_MARGIN"
            android:layout_margin="@dimen/STD_MARGIN"
            android:background="@drawable/standard_button_border"
            android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtEqipmentSerialNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment Serial No."
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/txtEqipmentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment Details"
            android:textColor="@color/primaryColor" />
    </LinearLayout>

</LinearLayout>