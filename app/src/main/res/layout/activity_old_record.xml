<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/primaryColor"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/HEADER_SIZE"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/imgBack"
            android:drawablePadding="@dimen/STD_PADDING"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_navigation_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/STD_MARGIN"
            android:textSize="@dimen/L_TEXT_SIZE"
            android:text="Old Record"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/topBar"
        android:id="@+id/linearParent"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/STD_MARGIN"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderDate"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/STD_MARGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:text="Order Date and time"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spCategories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/trolley_categories"
            app:ms_arrowColor="@color/primaryColor"
            app:ms_floatingLabelColor="@color/primaryColor"
            app:ms_floatingLabelText="Select Trolley Category"
            app:ms_hint="Select Trolley Category"
            app:ms_arrowSize="16dp"
            app:ms_multiline="true" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spCatSerialNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:ms_arrowColor="@color/primaryColor"
            app:ms_floatingLabelColor="@color/primaryColor"
            app:ms_floatingLabelText="Select Serial Number"
            app:ms_hint="Select Serial Number"
            app:ms_arrowSize="16dp"
            app:ms_multiline="true" />



    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/linearBottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/HEADER_SIZE">

        <TextView
            android:id="@+id/txtSubmit"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/L_TEXT_SIZE"
            android:text="Submit Now"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/txtSave"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/L_TEXT_SIZE"
            android:text="Save"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/linearParent"
        android:layout_above="@id/linearBottom"
        android:id="@+id/scrollView"
        android:layout_marginBottom="@dimen/STD_MARGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/STD_MARGIN"
                android:layout_marginLeft="@dimen/STD_MARGIN"
                android:layout_marginRight="@dimen/STD_MARGIN">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtComponent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Component 1"
                        android:textColor="@color/primaryColor" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/STD_MARGIN">

                        <EditText
                            android:id="@+id/edtComponent1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Component Details"
                            android:textColor="@color/primaryColor"
                            android:inputType="text"
                            android:textColorHint="#d1d1d1"/>
                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/STD_MARGIN"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtComponent2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginBottom="@dimen/STD_MARGIN"
                            android:text="Capture Image"/>


                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/LOGO_SIZE"
                                android:layout_height="@dimen/LOGO_SIZE"
                                android:padding="@dimen/STD_MARGIN"
                                android:layout_margin="@dimen/STD_MARGIN"
                                android:background="@drawable/standard_button_border"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_margin="@dimen/STD_MARGIN"
                                android:layout_width="@dimen/LOGO_SIZE"
                                android:layout_height="@dimen/LOGO_SIZE"
                                android:src="@drawable/ic_add"
                                android:padding="@dimen/STD_PADDING"
                                android:textColor="@color/white"
                                android:background="@drawable/standard_button_border"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>`


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/STD_MARGIN"
                android:layout_marginLeft="@dimen/STD_MARGIN"
                android:layout_marginRight="@dimen/STD_MARGIN">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Component 2"
                        android:textColor="@color/primaryColor" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/STD_MARGIN">

                        <EditText
                            android:id="@+id/edtComponent2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Component Details"
                            android:textColor="@color/primaryColor"
                            android:inputType="text"
                            android:textColorHint="#d1d1d1"/>
                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/STD_MARGIN"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginBottom="@dimen/STD_MARGIN"
                            android:text="Capture Image"/>


                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/LOGO_SIZE"
                                android:layout_height="@dimen/LOGO_SIZE"
                                android:padding="@dimen/STD_MARGIN"
                                android:layout_margin="@dimen/STD_MARGIN"
                                android:background="@drawable/standard_button_border"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_margin="@dimen/STD_MARGIN"
                                android:layout_width="@dimen/LOGO_SIZE"
                                android:layout_height="@dimen/LOGO_SIZE"
                                android:src="@drawable/ic_add"
                                android:padding="@dimen/STD_PADDING"
                                android:textColor="@color/white"
                                android:background="@drawable/standard_button_border"/>
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>`


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>








</RelativeLayout>