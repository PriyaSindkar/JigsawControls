<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/primaryColor"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/HEADER_SIZE"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/imgBack"
            android:drawablePadding="@dimen/STD_PADDING"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_navigation_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/STD_MARGIN"
            android:textSize="@dimen/L_TEXT_SIZE"
            android:text="Completed Records"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/topBar"
        android:id="@+id/linearParent"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/STD_MARGIN"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spCatSerialNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:ms_arrowColor="@color/primaryColor"
            app:ms_floatingLabelColor="@color/primaryColor"
            app:ms_floatingLabelText="Select Serial Number"
            app:ms_hint="Select Serial Number"
            app:ms_arrowSize="16dp"
            app:ms_multiline="true" />

        <TextView
            android:id="@+id/txtTrolleyCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trolley Category: Category 1"
            android:layout_margin="@dimen/STD_MARGIN"
            android:textStyle="bold"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/txtSerialNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serial No.: SERIAL_101"
            android:layout_margin="@dimen/STD_MARGIN"
            android:textStyle="bold"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/txtOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Date: 2015-10-10 11:30:00"
            android:layout_margin="@dimen/STD_MARGIN"
            android:textStyle="bold"
            android:textColor="@color/primaryColor" />
    </LinearLayout>


    <ScrollView
        android:layout_below="@id/linearParent"
        android:id="@+id/scrollView"
        android:layout_marginBottom="@dimen/STD_MARGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/STD_MARGIN"
                android:layout_marginLeft="@dimen/STD_MARGIN"
                android:layout_marginRight="@dimen/STD_MARGIN">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/LOGO_SIZE"
                        android:layout_height="@dimen/LOGO_SIZE"
                        android:padding="@dimen/STD_MARGIN"
                        android:layout_margin="@dimen/STD_MARGIN"
                        android:background="@drawable/standard_button_border"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Component 1 Details"
                        android:textColor="@color/primaryColor" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/STD_MARGIN"
                android:layout_marginLeft="@dimen/STD_MARGIN"
                android:layout_marginRight="@dimen/STD_MARGIN">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/LOGO_SIZE"
                        android:layout_height="@dimen/LOGO_SIZE"
                        android:padding="@dimen/STD_MARGIN"
                        android:layout_margin="@dimen/STD_MARGIN"
                        android:background="@drawable/standard_button_border"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Component 2 Details"
                        android:textColor="@color/primaryColor" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>








</RelativeLayout>